<header
    class="h-16 border-b border-white/10 flex items-center justify-between px-6 bg-gray-900/30 backdrop-blur-md sticky top-0 z-20"
>
    <div class="flex items-center gap-3">
        <div class="flex items-center gap-2">
            <button
                id="minimize-sidebar"
                class="hidden md:inline-flex text-gray-400 hover:text-white p-2 rounded-lg hover:bg-white/5 transition-colors"
                aria-label="Minimize sidebar"
                type="button"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
        <div class="hidden sm:block text-sm text-gray-400">
            <span class="text-cyan-400">Admin</span> / Dashboard
        </div>
    </div>

    <div class="flex items-center space-x-4 ml-auto">
        <!-- Notifications -->
        <button
            class="relative p-2 text-gray-400 hover:text-white transition-colors group"
        >
            <div
                class="absolute top-2 right-2 w-2 h-2 bg-cyan-500 rounded-full animate-pulse"
            >
            </div>
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 group-hover:scale-110 transition-transform"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"
                ></path>
            </svg>
        </button>

        <!-- Settings Quick Link -->
        <a
            href="/admin/settings"
            class="p-2 text-gray-400 hover:text-white transition-colors hover:rotate-90 duration-300"
            aria-label="Settings"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                ></path>
            </svg>
        </a>
    </div>
</header>
<style>
    #minimize-sidebar svg {
        transition: transform 200ms ease;
    }
    :root[data-admin-sidebar="minimized"] #minimize-sidebar svg {
        transform: rotate(180deg);
    }
</style>

<script>
    declare global {
        interface Window {
            toggleAdminSidebar: () => void;
            minimizeAdminSidebar: () => void;
        }
    }

    function setupNavbar() {
        document
            .getElementById("toggle-sidebar")
            ?.addEventListener("click", () => {
                if (window.toggleAdminSidebar) {
                    window.toggleAdminSidebar();
                }
            });

        document
            .getElementById("minimize-sidebar")
            ?.addEventListener("click", () => {
                if (window.minimizeAdminSidebar) {
                    window.minimizeAdminSidebar();
                }
            });
    }

    setupNavbar();
    document.addEventListener("astro:page-load", setupNavbar);
</script>
