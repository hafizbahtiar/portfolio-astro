---
import PrivateLayout from "../../layouts/PrivateLayout.astro";
import { profileService } from "../../lib/profile";

const profile = await profileService.getProfile();
---

<PrivateLayout title="Admin Profile">
  <div class="space-y-6">
    <div class="flex justify-between items-center">
      <h1 class="text-3xl font-bold text-white tracking-tight">Profile</h1>
      <button
        id="save-profile-btn"
        class="bg-cyan-600 hover:bg-cyan-500 text-white px-4 py-2 rounded-lg font-mono text-sm transition-colors flex items-center gap-2"
      >
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"
          ></path>
        </svg>
        SAVE CHANGES
      </button>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Profile Card -->
      <div class="lg:col-span-1">
        <div
          class="bg-gray-800/50 backdrop-blur-xl border border-gray-700 rounded-xl p-6 text-center"
        >
          <div class="relative w-32 h-32 mx-auto mb-4 group">
            <div
              class="absolute inset-0 bg-cyan-500 rounded-full blur-lg opacity-20 group-hover:opacity-40 transition-opacity"
            >
            </div>
            <img
              src={profile?.avatarUrl || "https://github.com/hafizbahtiar.png"}
              alt="Profile"
              class="relative w-full h-full rounded-full border-2 border-gray-700 object-cover"
            />
            <button
              class="absolute bottom-0 right-0 bg-gray-900 border border-gray-600 p-2 rounded-full text-gray-400 hover:text-white transition-colors"
            >
              <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </button>
          </div>
          <h2 class="text-xl font-bold text-white">
            {profile?.name || "Admin User"}
          </h2>
          <p class="text-cyan-400 font-mono text-sm">
            {profile?.email || "admin@example.com"}
          </p>
          <p class="text-gray-400 text-sm mt-2">
            Member since {
              new Date(profile?.createdAt || Date.now()).toLocaleDateString()
            }
          </p>
        </div>
      </div>

      <!-- Edit Form -->
      <div class="lg:col-span-2">
        <div
          class="bg-gray-800/50 backdrop-blur-xl border border-gray-700 rounded-xl p-6"
        >
          <h3
            class="text-lg font-bold text-white mb-6 border-b border-gray-700 pb-4"
          >
            Edit Details
          </h3>
          <form id="profile-form" class="space-y-6">
            <input type="hidden" name="id" value={profile?.id} />
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="space-y-2">
                <label class="block text-sm font-medium text-gray-400"
                  >Full Name</label
                >
                <input
                  type="text"
                  name="name"
                  value={profile?.name}
                  class="w-full bg-gray-900/50 border border-gray-700 rounded-lg px-4 py-2 text-white focus:ring-2 focus:ring-cyan-500/50 focus:border-cyan-500 outline-none transition-all"
                />
              </div>
              <div class="space-y-2">
                <label class="block text-sm font-medium text-gray-400"
                  >Email</label
                >
                <input
                  type="email"
                  name="email"
                  value={profile?.email}
                  class="w-full bg-gray-900/50 border border-gray-700 rounded-lg px-4 py-2 text-white focus:ring-2 focus:ring-cyan-500/50 focus:border-cyan-500 outline-none transition-all"
                />
              </div>
              <div class="space-y-2">
                <label class="block text-sm font-medium text-gray-400"
                  >Location</label
                >
                <input
                  type="text"
                  name="location"
                  value={profile?.location}
                  placeholder="e.g. Kuala Lumpur, MY"
                  class="w-full bg-gray-900/50 border border-gray-700 rounded-lg px-4 py-2 text-white focus:ring-2 focus:ring-cyan-500/50 focus:border-cyan-500 outline-none transition-all"
                />
              </div>
              <div class="space-y-2">
                <label class="block text-sm font-medium text-gray-400"
                  >Website</label
                >
                <input
                  type="url"
                  name="website"
                  value={profile?.website}
                  placeholder="https://"
                  class="w-full bg-gray-900/50 border border-gray-700 rounded-lg px-4 py-2 text-white focus:ring-2 focus:ring-cyan-500/50 focus:border-cyan-500 outline-none transition-all"
                />
              </div>
            </div>

            <div class="space-y-2">
              <label class="block text-sm font-medium text-gray-400">Bio</label>
              <textarea
                name="bio"
                rows="4"
                class="w-full bg-gray-900/50 border border-gray-700 rounded-lg px-4 py-2 text-white focus:ring-2 focus:ring-cyan-500/50 focus:border-cyan-500 outline-none transition-all resize-none"
                >{profile?.bio}</textarea
              >
            </div>

            <div class="space-y-2">
              <label class="block text-sm font-medium text-gray-400"
                >Social Links</label
              >
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="relative">
                  <span
                    class="absolute left-3 top-2.5 text-gray-500 pointer-events-none"
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
                      ><path
                        d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                      ></path></svg
                    >
                  </span>
                  <input
                    type="url"
                    name="linkedinUrl"
                    value={profile?.linkedinUrl}
                    placeholder="LinkedIn URL"
                    class="w-full bg-gray-900/50 border border-gray-700 rounded-lg pl-10 pr-4 py-2 text-white focus:ring-2 focus:ring-cyan-500/50 focus:border-cyan-500 outline-none transition-all"
                  />
                </div>
                <div class="relative">
                  <span
                    class="absolute left-3 top-2.5 text-gray-500 pointer-events-none"
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
                      ><path
                        d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                      ></path></svg
                    >
                  </span>
                  <input
                    type="url"
                    name="githubUrl"
                    value={profile?.githubUrl}
                    placeholder="GitHub URL"
                    class="w-full bg-gray-900/50 border border-gray-700 rounded-lg pl-10 pr-4 py-2 text-white focus:ring-2 focus:ring-cyan-500/50 focus:border-cyan-500 outline-none transition-all"
                  />
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</PrivateLayout>

<script>
  import { profileService } from "../../lib/profile";

  const saveBtn = document.getElementById(
    "save-profile-btn",
  ) as HTMLButtonElement | null;
  const form = document.getElementById(
    "profile-form",
  ) as HTMLFormElement | null;

  saveBtn?.addEventListener("click", async () => {
    if (!form || !saveBtn) return;

    const formData = new FormData(form);
    const id = formData.get("id");
    const data: any = {};

    formData.forEach((value, key) => {
      if (key !== "id") {
        data[key] = value;
      }
    });

    const originalBtnContent = saveBtn.innerHTML;
    saveBtn.innerHTML = `SAVING...`;
    saveBtn.disabled = true;

    try {
      if (id) {
        await profileService.updateProfile(Number(id), data);
        alert("Profile updated successfully!");
        // Optional: Refresh to show updated data if needed, or update UI directly
        // window.location.reload();
      }
    } catch (error) {
      console.error(error);
      alert("Failed to update profile.");
    } finally {
      saveBtn.innerHTML = originalBtnContent;
      saveBtn.disabled = false;
    }
  });
</script>
