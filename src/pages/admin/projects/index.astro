---
import PrivateLayout from "../../../layouts/PrivateLayout.astro";
---

<PrivateLayout title="Manage Projects">
  <div class="space-y-6">
    <div class="flex justify-between items-center">
      <h1 class="text-3xl font-bold text-white tracking-tight">Projects</h1>
      <a
        href="/admin/projects/new"
        class="bg-cyan-600 hover:bg-cyan-500 text-white px-4 py-2 rounded-lg font-mono text-sm transition-colors flex items-center gap-2"
      >
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 4v16m8-8H4"></path>
        </svg>
        NEW PROJECT
      </a>
    </div>

    <div
      class="bg-gray-800/50 backdrop-blur-xl border border-gray-700 rounded-xl overflow-hidden"
    >
      <div class="overflow-x-auto">
        <table class="w-full text-left text-sm text-gray-400">
          <thead
            class="bg-gray-900/50 text-gray-200 uppercase font-mono text-xs"
          >
            <tr>
              <th scope="col" class="px-6 py-4">Title</th>
              <th scope="col" class="px-6 py-4">Type</th>
              <th scope="col" class="px-6 py-4">Status</th>
              <th scope="col" class="px-6 py-4">Actions</th>
            </tr>
          </thead>
          <tbody id="projects-table-body" class="divide-y divide-gray-700">
            <tr>
              <td colspan="4" class="px-6 py-4 text-center text-gray-500">
                Loading projects...
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</PrivateLayout>

<script>
  import { projectsService } from "../../../lib/projects";
  import type { Project } from "../../../types/project";

  const tableBody = document.getElementById("projects-table-body");

  async function loadProjects() {
    if (!tableBody) return;

    try {
      const projects = await projectsService.getAdminProjects();

      if (projects.length === 0) {
        tableBody.innerHTML = `
          <tr>
            <td colspan="4" class="px-6 py-4 text-center text-gray-500">
              No projects found.
            </td>
          </tr>
        `;
        return;
      }

      tableBody.innerHTML = projects
        .map(
          (project: Project) => `
        <tr class="hover:bg-gray-700/30 transition-colors">
          <td class="px-6 py-4 font-medium text-white">
            <div class="flex flex-col">
              <span>${project.title}</span>
              <span class="text-xs text-gray-500 font-mono">${project.slug}</span>
            </div>
          </td>
          <td class="px-6 py-4">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-700 text-gray-300 border border-gray-600">
              ${project.projectType}
            </span>
          </td>
          <td class="px-6 py-4">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
              project.status === "completed"
                ? "bg-green-900/30 text-green-400 border border-green-900"
                : project.status === "in-progress"
                  ? "bg-yellow-900/30 text-yellow-400 border border-yellow-900"
                  : "bg-blue-900/30 text-blue-400 border border-blue-900"
            }">
              ${project.status ? project.status.toUpperCase() : "UNKNOWN"}
            </span>
          </td>
          <td class="px-6 py-4">
            <div class="flex items-center gap-2">
              <a href="/admin/projects/edit?id=${project.id}" class="p-2 text-cyan-400 hover:text-cyan-300 hover:bg-cyan-400/10 rounded-lg transition-colors" title="Edit Project">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              </a>
              <button data-id="${project.id}" class="delete-btn p-2 text-red-400 hover:text-red-300 hover:bg-red-400/10 rounded-lg transition-colors" title="Delete Project">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              </button>
            </div>
          </td>
        </tr>
      `,
        )
        .join("");

      // Add delete listeners
      document.querySelectorAll(".delete-btn").forEach((btn) => {
        btn.addEventListener("click", async (e) => {
          const id = (e.currentTarget as HTMLButtonElement).dataset.id;
          if (id && confirm("Are you sure you want to delete this project?")) {
            const success = await projectsService.deleteProject(Number(id));
            if (success) {
              loadProjects();
            } else {
              alert("Failed to delete project");
            }
          }
        });
      });
    } catch (error) {
      console.error(error);
      tableBody.innerHTML = `
        <tr>
          <td colspan="4" class="px-6 py-4 text-center text-red-400">
            Failed to load projects.
          </td>
        </tr>
      `;
    }
  }

  loadProjects();
</script>
