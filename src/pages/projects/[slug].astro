---
import ProjectLayout from "../../layouts/ProjectLayout.astro";
import { getProjects } from "../../lib/projects";
import { TextEditor } from "../../components/ui/TextEditor";
import { Image } from "astro:assets";
import jomDapur from "../../assets/projects/jom-dapur.jpg";
import jdManagement from "../../assets/projects/jd-management.png";
import invois from "../../assets/projects/invois/invois.png";

export async function getStaticPaths() {
    const projects = await getProjects();
    return projects.map((project) => ({
        params: { slug: project.slug },
        props: { project },
    }));
}

const { project } = Astro.props;
const localImageMap = new Map([
    ["/images/projects/jom-dapur.jpg", jomDapur],
    ["/images/projects/jd-management.png", jdManagement],
    ["/images/projects/invois/invois.png", invois],
]);
const resolvedImage =
    localImageMap.get(project.imageUrl) ?? project.imageUrl ?? undefined;
const isResolvedString = typeof resolvedImage === "string";
const resolvedImageUrl = isResolvedString ? resolvedImage : undefined;
const resolvedImageMeta = isResolvedString ? undefined : resolvedImage;

// Helper to format status
const formatStatus = (status?: string) => {
    if (!status) return "Completed";
    return status
        .split("-")
        .map((word) => word.charAt(0).toUpperCase() + word.slice(1))
        .join(" ");
};

const projectStats = [
    { label: "Role", value: project.role },
    { label: "Timeline", value: project.year.toString() },
    {
        label: "Type",
        value:
            project.projectType.charAt(0).toUpperCase() +
            project.projectType.slice(1),
    },
    { label: "Status", value: formatStatus(project.status) },
];

const technologies =
    project.technologies && project.technologies.length > 0
        ? project.technologies
        : project.tags || [];
---

<ProjectLayout
    title={`${project.title} - Hafiz Bahtiar`}
    description={project.description}
>
    <!-- Breadcrumb -->
    <a href="/projects" class="btn-text mb-8 group inline-flex items-center">
        <svg
            class="w-4 h-4 mr-2 transform group-hover:-translate-x-1 transition-transform"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Projects
    </a>

    <div
        class="bg-gray-900/50 backdrop-blur-sm border border-gray-800 rounded-3xl overflow-hidden shadow-2xl animate-fade-in"
    >
        <!-- Hero Section -->
        <div
            class="h-64 md:h-80 bg-gray-800 relative flex items-center justify-center overflow-hidden"
        >
            {
                (!project.imageVariant ||
                    project.imageVariant === "banner" ||
                    project.imageVariant === "width-banner") &&
                resolvedImage ? (
                    <div class="absolute inset-0 z-0 bg-gray-900">
                        <div class="absolute inset-0 overflow-hidden">
                            {resolvedImageUrl ? (
                                <Image
                                    src={resolvedImageUrl}
                                    alt=""
                                    width={1200}
                                    height={480}
                                    loading="lazy"
                                    decoding="async"
                                    fetchpriority="low"
                                    class="w-full h-full object-cover blur-xl opacity-40 scale-110"
                                />
                            ) : (
                                <Image
                                    src={resolvedImageMeta!}
                                    alt=""
                                    width={1200}
                                    height={480}
                                    loading="lazy"
                                    decoding="async"
                                    fetchpriority="low"
                                    class="w-full h-full object-cover blur-xl opacity-40 scale-110"
                                />
                            )}
                        </div>
                        {resolvedImageUrl ? (
                            <Image
                                src={resolvedImageUrl}
                                alt={project.title}
                                width={1200}
                                height={480}
                                loading="eager"
                                decoding="async"
                                fetchpriority="high"
                                class="relative w-full h-full object-contain z-0 opacity-90"
                            />
                        ) : (
                            <Image
                                src={resolvedImageMeta!}
                                alt={project.title}
                                width={1200}
                                height={480}
                                loading="eager"
                                decoding="async"
                                fetchpriority="high"
                                class="relative w-full h-full object-contain z-0 opacity-90"
                            />
                        )}
                        <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/60 to-gray-900/20 z-10" />
                    </div>
                ) : (
                    <div class="absolute inset-0 bg-gradient-to-br from-cyan-900/20 to-purple-900/20 z-0" />
                )
            }
            <div
                class="absolute -top-24 -right-24 w-64 h-64 bg-purple-500/10 rounded-full blur-3xl"
            >
            </div>
            <div
                class="absolute -bottom-24 -left-24 w-64 h-64 bg-cyan-500/10 rounded-full blur-3xl"
            >
            </div>

            <div
                class="relative z-10 flex flex-col items-center justify-center"
            >
                {
                    project.imageVariant === "logo" &&
                        resolvedImage &&
                        (resolvedImageUrl ? (
                            <Image
                                src={resolvedImageUrl}
                                alt={`${project.title} logo`}
                                width={96}
                                height={96}
                                loading="eager"
                                decoding="async"
                                fetchpriority="high"
                                class="h-24 w-auto mb-4 drop-shadow-lg"
                            />
                        ) : (
                            <Image
                                src={resolvedImageMeta!}
                                alt={`${project.title} logo`}
                                width={96}
                                height={96}
                                loading="eager"
                                decoding="async"
                                fetchpriority="high"
                                class="h-24 w-auto mb-4 drop-shadow-lg"
                            />
                        ))
                }
                <h1
                    class="text-4xl md:text-5xl font-bold text-white text-center px-4 drop-shadow-lg tracking-tight"
                >
                    {project.title}
                </h1>
            </div>
        </div>

        <!-- Tabs Navigation -->
        <div
            class="border-b border-gray-800 bg-gray-900/80 backdrop-blur-md sticky top-0 z-20"
        >
            <div class="flex overflow-x-auto">
                <button
                    class="tab-btn active px-6 py-4 text-sm font-medium text-gray-400 hover:text-white transition-colors relative whitespace-nowrap"
                    data-tab="overview"
                >
                    Overview
                    <span
                        class="active-indicator absolute bottom-0 left-0 w-full h-0.5 bg-cyan-500 transform scale-x-0 transition-transform duration-300 origin-left"
                    ></span>
                </button>
                <button
                    class="tab-btn px-6 py-4 text-sm font-medium text-gray-400 hover:text-white transition-colors relative whitespace-nowrap"
                    data-tab="case-study"
                >
                    Case Study
                    <span
                        class="active-indicator absolute bottom-0 left-0 w-full h-0.5 bg-cyan-500 transform scale-x-0 transition-transform duration-300 origin-left"
                    ></span>
                </button>
                <button
                    class="tab-btn px-6 py-4 text-sm font-medium text-gray-400 hover:text-white transition-colors relative whitespace-nowrap"
                    data-tab="tech-stack"
                >
                    Tech Stack
                    <span
                        class="active-indicator absolute bottom-0 left-0 w-full h-0.5 bg-cyan-500 transform scale-x-0 transition-transform duration-300 origin-left"
                    ></span>
                </button>
            </div>
        </div>

        <div class="p-8 md:p-12 min-h-[400px]">
            <!-- Overview Tab -->
            <div id="overview" class="tab-content block animate-fade-in">
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
                    <div class="lg:col-span-2 space-y-8">
                        <div>
                            <h3 class="text-xl font-bold text-white mb-4">
                                Project Summary
                            </h3>
                            <p class="text-gray-300 leading-relaxed text-lg">
                                {project.description}
                            </p>
                        </div>

                        <div class="flex flex-wrap gap-4">
                            {
                                project.githubUrl && (
                                    <a
                                        href={project.githubUrl}
                                        target="_blank"
                                        class="btn btn-secondary flex items-center justify-center"
                                    >
                                        <svg
                                            class="w-5 h-5 mr-2"
                                            fill="currentColor"
                                            viewBox="0 0 24 24"
                                            aria-hidden="true"
                                        >
                                            <path
                                                fill-rule="evenodd"
                                                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                                                clip-rule="evenodd"
                                            />
                                        </svg>
                                        View Source
                                    </a>
                                )
                            }
                            {
                                project.liveUrl && (
                                    <a
                                        href={project.liveUrl}
                                        class="btn btn-primary flex items-center justify-center"
                                    >
                                        Live Demo
                                        <svg
                                            class="w-5 h-5 ml-2"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                            xmlns="http://www.w3.org/2000/svg"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                            />
                                        </svg>
                                    </a>
                                )
                            }
                        </div>
                    </div>

                    <div
                        class="bg-gray-800/50 rounded-xl p-6 border border-gray-700 h-fit"
                    >
                        <h4
                            class="text-sm font-semibold text-gray-400 uppercase tracking-wider mb-4"
                        >
                            Project Info
                        </h4>
                        <div class="space-y-4">
                            {
                                projectStats.map((stat) => (
                                    <div class="flex justify-between items-center border-b border-gray-700 pb-2 last:border-0 last:pb-0">
                                        <span class="text-gray-400">
                                            {stat.label}
                                        </span>
                                        <span class="text-white font-medium">
                                            {stat.value}
                                        </span>
                                    </div>
                                ))
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Case Study Tab -->
            <div id="case-study" class="tab-content hidden animate-fade-in">
                <div class="space-y-6">
                    <div class="flex flex-col gap-1">
                        <h3 class="text-xl font-bold text-white">
                            Full Description
                        </h3>
                        <p
                            class="text-xs font-mono uppercase tracking-[0.2em] text-cyan-400/80"
                        >
                            Markdown Supported
                        </p>
                    </div>
                    <TextEditor
                        content={project.description}
                        editable={false}
                        showToolbar={false}
                        client:load
                    />

                    {
                        project.features && project.features.length > 0 && (
                            <div class="mt-8">
                                <h3 class="text-xl font-bold text-white mb-4">
                                    Key Features
                                </h3>
                                <ul class="space-y-2">
                                    {project.features.map((feature) => (
                                        <li class="flex items-start text-gray-300">
                                            <span class="text-cyan-400 mr-2 mt-1.5">
                                                <svg
                                                    class="w-4 h-4"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    viewBox="0 0 24 24"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M5 13l4 4L19 7"
                                                    />
                                                </svg>
                                            </span>
                                            {feature}
                                        </li>
                                    ))}
                                </ul>
                            </div>
                        )
                    }
                </div>
            </div>

            <!-- Tech Stack Tab -->
            <div id="tech-stack" class="tab-content hidden animate-fade-in">
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    {
                        technologies.map((tech) => (
                            <div class="bg-gray-800/50 p-4 rounded-xl border border-gray-700 flex items-center space-x-3 hover:bg-gray-800 transition-colors group">
                                <div class="w-10 h-10 rounded-lg bg-indigo-500/10 flex items-center justify-center text-indigo-400 group-hover:bg-indigo-500/20 group-hover:scale-110 transition-all">
                                    <svg
                                        class="w-6 h-6"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                        xmlns="http://www.w3.org/2000/svg"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
                                        />
                                    </svg>
                                </div>
                                <span class="font-medium text-gray-200">
                                    {tech}
                                </span>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</ProjectLayout>

<style>
    .tab-btn.active {
        color: white;
    }
    .tab-btn.active .active-indicator {
        transform: scaleX(1);
    }
</style>

<script>
    function setupTabs() {
        const tabBtns = document.querySelectorAll(".tab-btn");
        const tabContents = document.querySelectorAll(".tab-content");

        tabBtns.forEach((btn) => {
            btn.addEventListener("click", () => {
                const tabId = btn.getAttribute("data-tab");

                // Remove active class from all buttons
                tabBtns.forEach((b) => b.classList.remove("active"));
                // Add active class to clicked button
                btn.classList.add("active");

                // Hide all tab contents
                tabContents.forEach((content) =>
                    content.classList.add("hidden"),
                );
                tabContents.forEach((content) =>
                    content.classList.remove("block"),
                );

                // Show selected tab content
                const selectedTab = document.getElementById(tabId!);
                selectedTab?.classList.remove("hidden");
                selectedTab?.classList.add("block");
            });
        });
    }

    // Run on initial load
    setupTabs();

    // Run on view transitions
    document.addEventListener("astro:page-load", setupTabs);
</script>
