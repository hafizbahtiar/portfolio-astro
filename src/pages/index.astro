---
import PublicLayout from "../layouts/PublicLayout.astro";
import Hero from "../components/home/Hero.astro";
import ContactSection from "../components/home/ContactSection.astro";
import FeaturedProjects from "../components/home/FeaturedProjects";

const skills = [
	{
		category: "Mobile Development",
		items: ["Flutter", "Dart", "React Native", "Kotlin", "Swift"],
	},
	{
		category: "Web Development",
		items: ["React", "Next.js", "Astro", "HTML/CSS", "Tailwind"],
	},
	{
		category: "Backend & Cloud",
		items: ["Node.js", "Express", "Firebase", "Supabase", "AWS"],
	},
	{
		category: "Tools & DevOps",
		items: ["Git", "Docker", "CI/CD", "Figma", "Jira"],
	},
];
---

<PublicLayout>
	<Hero />

	<div class="container-main space-y-16 md:space-y-24 pb-16 md:pb-24">
		<!-- About Section -->
		<section id="about" class="scroll-offset">
			<div class="flex flex-col md:flex-row gap-8 md:gap-12 items-center">
				<div class="w-full md:w-1/2">
					<div
						class="relative rounded-2xl overflow-hidden shadow-xl aspect-video md:aspect-square bg-gray-900 border border-gray-800 group"
					>
						<div
							class="absolute inset-0 bg-gradient-to-br from-cyan-500/10 to-purple-500/10 group-hover:opacity-0 transition-opacity duration-500"
						>
						</div>
						<!-- Placeholder for About Image -->
						<div
							class="w-full h-full flex items-center justify-center bg-gray-900 text-gray-700"
						>
							<svg
								class="w-24 h-24"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
								xmlns="http://www.w3.org/2000/svg"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="1"
									d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
								></path>
							</svg>
						</div>
					</div>
				</div>
				<div class="w-full md:w-1/2">
					<h2 class="section-title">About Me</h2>
					<p class="text-body mb-6">
						I'm a passionate developer with over 5 years of
						experience in creating digital solutions. My journey
						began with mobile development, where I fell in love with
						the ability to bring ideas to life in the palm of
						people's hands.
					</p>
					<p class="text-body mb-8">
						Today, I work across the full stack, leveraging
						technologies like Flutter for mobile and Node.js for
						backend systems. I believe in writing clean,
						maintainable code and building user-centric applications
						that solve real-world problems.
					</p>

					<div class="grid grid-cols-2 gap-6">
						<div>
							<h4 class="text-4xl font-bold text-cyan-400 mb-1">
								5+
							</h4>
							<p class="text-gray-500 font-medium">
								Years Experience
							</p>
						</div>
						<div>
							<h4 class="text-4xl font-bold text-purple-400 mb-1">
								20+
							</h4>
							<p class="text-gray-500 font-medium">
								Projects Completed
							</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Skills Section -->
		<section id="skills" class="scroll-offset">
			<div class="text-center mb-16">
				<h2 class="section-title">Technical Skills</h2>
				<p class="text-body max-w-2xl mx-auto">
					My technical toolkit that helps me build efficient and
					scalable solutions.
				</p>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
				{
					skills.map((skillGroup) => (
						<div class="bg-gray-900/50 backdrop-blur-sm p-6 rounded-xl shadow-sm border border-gray-800 hover:shadow-md hover:shadow-cyan-900/20 transition-all duration-300">
							<h3 class="text-xl font-bold mb-4 text-white border-b pb-2 border-gray-800">
								{skillGroup.category}
							</h3>
							<div class="flex flex-wrap gap-2">
								{skillGroup.items.map((item) => (
									<span class="badge-gray">{item}</span>
								))}
							</div>
						</div>
					))
				}
			</div>
		</section>

		<!-- Projects Section -->
		<section
			id="projects"
			class="scroll-offset -mx-4 md:-mx-8 px-4 md:px-8 py-12 md:py-16 rounded-3xl"
		>
			<div class="text-center mb-12 md:mb-16">
				<h2 class="section-title">Featured Projects</h2>
				<p class="text-body max-w-2xl mx-auto">
					A selection of my recent work demonstrating my expertise in
					mobile and web development.
				</p>
			</div>

			<FeaturedProjects client:load />

			<div class="text-center mt-12">
				<a
					href="/projects"
					class="inline-block bg-gray-800 hover:bg-gray-700 text-white font-semibold py-3 px-8 rounded-full transition-colors border border-gray-700"
				>
					View All Projects
				</a>
			</div>
		</section>

		<!-- Contact Section -->
		<ContactSection />
	</div>
</PublicLayout>
